@model SaaS.Mailer.Models.WelcomeFreeProductNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.PdfForge.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.PdfForge.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.PdfForge.App_LocalResources.WelcomeFreeProductNotification.WelcomeFreeProductNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="center">
            <p>@General.Dear @Model.FullName,</p>
            <p>
                @local.Prgh_1
            </p>
            <p>
                @local.Prgh_2
            </p>
        </td>
    </tr>
    <tr>
        <td align="center" style="padding-top: 37px; padding-bottom: 30px;">

            <table border="0" cellpadding="0" cellspacing="0" class="emailButton" bgcolor="#79b70e">
                <tr>
                    <td align="left" valign="middle" class="emailButtonContent" style="padding-top: 15px; padding-bottom: 15px; padding-right: 15px;">
                        <a href="@links.account" target="_blank">
                            <img src="http://go.pdfarchitect.org/Mailer/2017/E-Sign/images/btn-arrow.jpg" width="53" height="16" />@Buttons.useESignFree
                        </a>
                    </td>
                </tr>
            </table>

        </td>
    </tr>
    <tr>
        <td align="center" style="padding-bottom: 40px;">@General.yourTeam</td>
    </tr>
</table>