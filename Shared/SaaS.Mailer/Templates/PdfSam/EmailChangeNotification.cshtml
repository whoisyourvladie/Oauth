@model SaaS.Mailer.Models.Notification

@using General = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.General
@using local = SaaS.Mailer.Templates.PdfSam.App_LocalResources.EmailChangeNotification.EmailChangeNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.Dear @Model["fullName"],
            </p>
            <p>
                @local.Prgh_1_1 @Model["newEmail"]
                @local.Prgh_1_2
            </p>
            <p>
                @local.Prgh_2
            </p>
        </td>
    </tr>
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.regards
            </p>
            <p>
                @General.yourTeam
            </p>
        </td>
    </tr>
</table>