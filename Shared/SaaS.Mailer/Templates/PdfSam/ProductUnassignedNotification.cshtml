@model SaaS.Mailer.Models.ProductAssignedNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.PdfSam.App_LocalResources.ProductUnassignedNotification.ProductUnassignedNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="center">
            <p>@General.Dear @Model.FullName,</p>
            <p>
                @Html.Raw(string.Format(local.Prgh_1, "<strong>" + Model.ProductName + "</strong>", "<strong>" + Model.OwnerFullName + "</strong>"))
            </p>
            <p>
                @local.Prgh_2
            </p>
        </td>
    </tr>

    <tr>
        <td align="center" style="padding-top: 37px; padding-bottom: 30px;">

            <table border="0" cellpadding="0" cellspacing="0" class="emailButton" bgcolor="#79b70e">
                <tr>
                    <td align="center" valign="middle" class="emailButtonContent" style="padding-top: 15px; padding-bottom: 15px; padding-right: 15px; padding-left: 15px;">
                        <a href="@links.productPricing" target="_blank">
                            @Buttons.ProductsPricing
                        </a>
                    </td>
                </tr>
            </table>

        </td>
    </tr>

    <tr>
        <td style="padding-bottom: 15px;">
           @Html.Raw(string.Format(local.Prgh_3, "<strong>" + Model.OwnerFullName + "</strong>")).
        </td>
    </tr>

    <tr>
        <td align="center" style="padding-bottom: 40px;">@General.yourTeam</td>
    </tr>

</table>