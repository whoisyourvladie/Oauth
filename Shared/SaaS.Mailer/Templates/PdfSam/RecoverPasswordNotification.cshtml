@model SaaS.Mailer.Models.RecoverPasswordNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.PdfSam.App_LocalResources.RecoverPasswordNotification.RecoverPasswordNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="center">
            <p>@General.Dear @Model.FullName,</p>
            <p>
                @local.Prgh_1
            </p>
        </td>
    </tr>
    <tr>
        <td style="padding-bottom: 15px; padding-top: 20px;">
            <a href="@links.Localize(Model.RecoverPasswordLink)" style="color:#3c3b3b;">@Buttons.ClickHere </a> @General.resetPassword.
        </td>
    </tr>
    <tr>
        <td align="center" style="padding-bottom: 40px;">@General.yourTeam</td>
    </tr>
</table>