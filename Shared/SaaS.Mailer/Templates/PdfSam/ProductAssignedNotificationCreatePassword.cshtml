@model SaaS.Mailer.Models.Notification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.PdfSam.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.PdfSam.App_LocalResources.ProductAssignedNotificationCreatePassword.ProductAssignedNotificationCreatePassword

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="center">
            <p>@General.Hello,</p>
            <p>
                @Html.Raw(string.Format(local.Prgh_1, "<strong>" + Model["productName"] + "</strong>", "<strong>" + Model["ownerFullName"] + "</strong>")) @local.Prgh_1_1
            </p>
        </td>
    </tr>

    <tr>
        <td align="center" style="padding-top: 37px; padding-bottom: 30px;">

            <table border="0" cellpadding="0" cellspacing="0" class="emailButton" bgcolor="#79b70e">
                <tr>
                    <td align="left" valign="middle" class="emailButtonContent" style="padding-top: 15px; padding-bottom: 15px; padding-right: 15px;">
                        <a href="@Model["createPasswordLink"]" target="_blank">
                            @Buttons.CreatePassword
                        </a>
                    </td>
                </tr>
            </table>

        </td>
    </tr>

    <tr>
        <td style="padding-bottom: 15px;">
            <a href="@links.Localize(Model["downloadLink"])" style="color:#3c3b3b;">@Buttons.ClickHere</a> @local.Prgh_2 @local.Prgh_3.
        </td>
    </tr>

    <tr>
        <td align="center" style="padding-bottom: 40px;">@General.yourTeam</td>
    </tr>

</table>