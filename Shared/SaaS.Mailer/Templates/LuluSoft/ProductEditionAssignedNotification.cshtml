@model SaaS.Mailer.Models.ProductAssignedNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.LuluSoft.App_LocalResources.ProductEditionAssignedNotification.ProductEditionAssignedNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.Hello,
            </p>
            <p>
                @General.Prgh_1 @Model.ProductName @General.by @Model.OwnerFullName.
                @local.Prgh_1
            </p>
            <p>
                @General.Prgh_4
                <a href="@links.knowledgeBaseSwitchProduct" style="font:16px/24px Arial; color:#3a74e6; text-decoration: underline;">@Buttons.SwitchProduct</a>
            </p>
            <p>
                <a href="@links.Localize(Model.DownloadLink)"
                   style="font:16px/24px Arial; color:#3a74e6; text-decoration: underline;">@Buttons.ClickHere</a> @General.Prgh_3.
            </p>
            <p>
                @General.regards
            </p>
            <p>
                @General.yourTeam
            </p>
        </td>
    </tr>
</table>