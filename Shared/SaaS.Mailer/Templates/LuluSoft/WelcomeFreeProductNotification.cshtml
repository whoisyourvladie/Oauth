@model SaaS.Mailer.Models.WelcomeFreeProductNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.General
@using local = SaaS.Mailer.Templates.LuluSoft.App_LocalResources.WelcomeFreeProductNotification.WelcomeFreeProductNotification


<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.Dear @Model.FullName,
            </p>
            <p>
                @General.Welcome_Prgh_1
            </p>
            <p>
                @string.Format(local.Prgh_1, @Model.ProductName)
            </p>
            <p>
                @General.regards
            </p>
            <p>
                @General.yourTeam
            </p>
        </td>
    </tr>
</table>