@model SaaS.Mailer.Models.RecoverPasswordNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.General
@using Buttons = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.Buttons
@using local = SaaS.Mailer.Templates.LuluSoft.App_LocalResources.RecoverPasswordNotification.RecoverPasswordNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.Dear @Model.FullName,
            </p>
            <p>
                @local.Prgh_1
            </p>
            <p>
                <a href="@links.Localize(Model.RecoverPasswordLink)" style="font:16px/24px Arial; color:#3a74e6; text-decoration: underline;">@Buttons.ClickResetPasw</a>.
            </p>
            <p>
                @General.regards
            </p>
            <p>
                @General.yourTeam
            </p>
        </td>
    </tr>
</table>