@model SaaS.Mailer.Models.EmailChangeNotification

@using SaaS.Mailer;
@using General = SaaS.Mailer.Templates.LuluSoft.App_GlobalResources.General
@using local = SaaS.Mailer.Templates.LuluSoft.App_LocalResources.EmailChangeNotification.EmailChangeNotification

<table cellpadding="0" cellspacing="0" bgcolor="#ffffff" border="0" width="626" align="center">
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.Dear @Model.FullName,
            </p>
            <p>
                @local.Prgh_1_1 @Model.NewEmail
                @local.Prgh_1_2
            </p>
            <p>
                @local.Prgh_2
            </p>
            <p>
                @Html.Raw(local.Prgh_3)
            </p>
        </td>
    </tr>
    <tr>
        <td align="left" style="font:16px/24px Arial; color:#2b2b2b; padding:45px 0 0;">
            <p>
                @General.regards
            </p>
            <p>
                @General.yourTeam
            </p>
        </td>
    </tr>
</table>