@using SaaS.UI.Admin.App_Start;
@using StructureMap;

@helper FirstName()
{
IAppSettings appSettings = ObjectFactory.GetInstance<IAppSettings>();
    <div data-ng-form-validation-group>
        <label>First name *</label>
        <input type="text" class="form-control input-sm"
               name="firstName" placeholder="First name..." data-ng-model="model.account.firstName"
               data-ng-model-options="{ updateOn: 'blur' }" maxlength="40" ng-pattern="@appSettings.Validation.JsFirstNamePattern" required>
        <span data-ng-required-error>Enter a first name</span>
        <span data-ng-pattern-error>You need to enter a valid first name</span>
    </div>
}
