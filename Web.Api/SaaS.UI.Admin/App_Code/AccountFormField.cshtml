@helper NewPassword()
{
    <div data-ng-form-validation-group>
        <label>Password *</label>
        <input type="password" name="password" placeholder="Password *" data-ng-model="model.account.password" data-ng-model-options="{ updateOn: 'change blur' }" maxlength="100" ng-password-pattern="model.account.password" required>
        <span data-ng-required-error>Enter a new password</span>
        <span data-ng-passwordPattern-error>Your password must be at least 6 characters, containing both letters and numbers</span>
        <span data-ng-passwordSpecialCharacters-error>Your password cannot contain 3 or more sequential characters or have the same character repeated sequentially (eg. 123,ABC, AAA, 111)</span>
        <span data-ng-passwordSpecialWords-error>Your password cannot contain "password", "admin" or "administrator"</span>
    </div>
}