<div class="panel panel-default" data-ng-controller="accountConnectedAccountsController">
    <div class="panel-heading clearfix">
        <span class="fas fa-user"></span> Connected accounts
        @Button.Refresh()
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Create date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="sessionToken in model.sessionTokens">
                        <td class="col-sm-8">
                            <span data-ng-external-connected-account="{{::sessionToken.externalClientName}}"></span>
                            <span data-ng-bind="::sessionToken.email"></span>
                        </td>
                        <td class="col-sm-1">
                            <span class="label label-info" data-ng-hide="::sessionToken.isUnlinked">Connected</span>
                            <span class="label label-danger" data-ng-show="::sessionToken.isUnlinked">Disconnected</span>
                        </td>
                        <td class="col-sm-3" data-ng-date="::sessionToken.createDate"></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" data-ng-hide="!model.sessionTokens || model.sessionTokens.length">
                            Oops, no records found!
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>