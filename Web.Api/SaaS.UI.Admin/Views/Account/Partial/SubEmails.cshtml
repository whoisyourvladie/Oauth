<div class="panel panel-default" data-ng-controller="accountSubEmailsController">
    <div class="panel-heading clearfix">
        <span class="fas fas fa-at"></span> Previous emails
        @Button.Refresh()
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="subEmail in model.subEmails">
                        <td class="col-sm-8">
                            <span data-ng-bind="::subEmail.email"></span>
                        </td>
                        <td class="col-sm-4">
                            <span data-ng-date="::subEmail.createDate"></span>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" data-ng-hide="!model.subEmails || model.subEmails.length">
                            Oops, no records found!
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
